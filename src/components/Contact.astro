<script>
  // FAQ Accordion functionality
  function toggleFAQ(button: HTMLButtonElement) {
    const content = button.nextElementSibling as HTMLElement;
    const icon = button.querySelector('.faq-icon') as SVGElement;
    
    // Close all other FAQ items
    const allFaqItems = document.querySelectorAll('.faq-content');
    const allFaqIcons = document.querySelectorAll('.faq-icon');
    
    allFaqItems.forEach((item, index) => {
      if (item !== content) {
        item.classList.remove('active');
        (allFaqIcons[index] as SVGElement).style.transform = 'rotate(0deg)';
      }
    });
    
    // Toggle current FAQ item
    content.classList.toggle('active');
    
    // Rotate icon
    if (content.classList.contains('active')) {
      icon.style.transform = 'rotate(180deg)';
    } else {
      icon.style.transform = 'rotate(0deg)';
    }
  }

  // Make function globally available
  (window as any).toggleFAQ = toggleFAQ;

  // Contact form handling
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    contactForm?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData(this);
      const data = Object.fromEntries(formData);
      
      // Create WhatsApp message
      const message = `Hola JeanFit! 👋

Me interesa tu servicio de Personal Trainer.

*Información:*
• Nombre: ${data.name}
• Email: ${data.email}
• WhatsApp: ${data.phone || 'No proporcionado'}
• Plan de interés: ${data.plan || 'No seleccionado'}

*Mensaje:*
${data.message}

¿Podrías contactarme para más información?`;

      // Encode message for WhatsApp
      const encodedMessage = encodeURIComponent(message);
      const whatsappUrl = `https://wa.me/56939419202?text=${encodedMessage}`;
      
      // Open WhatsApp
      window.open(whatsappUrl, '_blank');
      
      // Show success message
      alert('¡Gracias por tu mensaje! Te redirigimos a WhatsApp para continuar.');
    });
  });
</script> 