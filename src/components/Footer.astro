<style>
  .footer-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
    color: #ffffff;
    padding: 4rem 0 0;
    position: relative;
    overflow: hidden;
  }

  .footer-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #FFD600 0%, #ed1c24 50%, #FFD600 100%);
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 214, 0, 0.2);
  }

  /* Brand Section */
  .footer-brand {
    max-width: 400px;
  }

  .brand-logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .footer-logo {
    width: 56px;
    height: 56px;
    object-fit: contain;
    filter: drop-shadow(0 0 12px rgba(255, 214, 0, 0.8));
    transition: filter 0.3s ease;
  }

  .footer-logo:hover {
    filter: drop-shadow(0 0 20px rgba(255, 214, 0, 1)) drop-shadow(0 0 8px rgba(237, 28, 36, 0.8));
  }

  .brand-title {
    font-size: 2rem;
    font-weight: 800;
    color: #FFD600;
    margin: 0;
    text-shadow: 0 0 8px rgba(255, 214, 0, 0.6);
    letter-spacing: 0.5px;
  }

  .brand-subtitle {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .brand-description {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.15s ease-out;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .social-link.instagram {
    background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
  }

  .social-link.tiktok {
    background: linear-gradient(45deg, #000000, #ff0050, #00f2ea);
  }

  .social-link.whatsapp {
    background: linear-gradient(45deg, #25d366, #128c7e);
  }

  /* Footer Sections */
  .footer-heading {
    color: #FFD600;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    text-shadow: 0 0 8px rgba(255, 214, 0, 0.4);
  }

  /* Navigation Links */
  .nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links li {
    margin-bottom: 0.75rem;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.15s ease-out;
    padding: 0.25rem 0;
    display: block;
  }

  .nav-links a:hover {
    color: #FFD600;
    text-shadow: 0 0 6px rgba(255, 214, 0, 0.6);
    transform: translateX(4px);
  }

  /* Service Links */
  .service-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-links li {
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid rgba(255, 214, 0, 0.1);
    transition: all 0.15s ease-out;
  }

  .service-links li:hover {
    background: rgba(255, 214, 0, 0.1);
    border-color: rgba(255, 214, 0, 0.3);
  }

  .service-name {
    display: block;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
  }

  .service-price {
    display: block;
    color: #FFD600;
    font-weight: 700;
    font-size: 0.9rem;
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
  }

  .contact-icon {
    width: 20px;
    height: 20px;
    color: #FFD600;
    flex-shrink: 0;
  }

  /* Footer Bottom */
  .footer-bottom {
    padding: 1.25rem 0;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 214, 0, 0.2);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .footer-bottom-content p {
    margin: 0;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.8rem;
    font-weight: 400;
  }

  .legal-links {
    display: flex;
    gap: 1.5rem;
  }

  .legal-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 400;
    transition: color 0.15s ease-out;
  }

  .legal-link:hover {
    color: #FFD600;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .footer-brand {
      grid-column: 1 / -1;
      max-width: none;
    }
  }

  @media (max-width: 768px) {
    .footer-section {
      padding: 3rem 0 0;
    }
    
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
    
    .social-links {
      justify-content: center;
    }
    
    .brand-logo-section {
      justify-content: center;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .brand-title {
      font-size: 1.75rem;
    }
    
    .footer-bottom {
      padding: 1rem 0;
    }
    
    .legal-links {
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-bottom-content p,
    .legal-link {
      font-size: 0.75rem;
    }
  }
</style>

<script>
  // Smooth scrolling for footer navigation links
  document.querySelectorAll('.footer-section a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          const offsetTop = (target as HTMLElement).offsetTop - 80; // Account for fixed navbar
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script> 